<div id="<%= dom_id comment %>">
  <p class="status-badge" style="color: var(--status-<%= comment.status %>)">
    <strong>Status:</strong>
    <%= comment.status %>
  </p>

  <p>
    <strong>Name:</strong>
    <%= comment.name %>
  </p>

  <p>
    <strong>Email:</strong>
    <%= comment.email %>
  </p>

  <p>
    <strong>Content:</strong>
    <%= comment.content %>
  </p>

</div>
