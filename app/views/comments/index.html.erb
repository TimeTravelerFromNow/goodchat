<p style="color: green"><%= notice %></p>

<% content_for :title, "Comments" %>

<h1>Comments</h1>

<div id="comments">
  <% @comments.each do |comment| %>
    <div class="comment-container">
      <%= render comment %>
      <p>
        <%= link_to "Show this comment", comment %>
      </p>
    </div>
  <% end %>
</div>

<%= link_to "New comment", new_comment_path %>
